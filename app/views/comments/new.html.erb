<div class="w-100 h-100 p-32">
<%= form_with model: [@post, @comment], url: create_post_comment_path  do |form| %>
      <% if @comment.errors.any? %>
        <div>
          <% @comment.errors.full_messages.each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>
      <% end %>
      <div class="mb-4 flex flex-col">
        <%= form.text_field :text, placeholder: "Add new comment here", class: "text-[#11537d] p-3" %>
      </div>
      <div class="mb-4 flex flex-col">
        <%= form.submit "Comment" , class: "text-[#11537d] text-xl font-medium bg-white px-4 py-2 rounded-[15px] w-fit cursor-pointer" %>
      </div>
<% end %>
</div>